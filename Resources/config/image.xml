<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_create.handler_class">Symfony\Cmf\Bundle\CreateBundle\Serializer\Handler</parameter>
    </parameters>

    <services>

        <service id="cmf_create.image.controller" class="%cmf_create.image.controller_class%">
            <argument />
            <argument>%cmf_create.manager_name%</argument>
            <argument type="service" id="router" />
            <argument type="service" id="fos_rest.view_handler"/>
            <argument>%cmf_create.image.model_class%</argument>
            <argument>%cmf_create.role%</argument>
            <argument type="service" id="security.context" on-invalid="ignore"/>
        </service>

        <service id="cmf_create.serializer.handler" class="%cmf_create.handler_class%" public="true">
            <tag name="jms_serializer.handler" type="%cmf_create.image.model_class%" direction="serialization" format="json" method="serializeImageToJson" />
            <argument type="service" id="router"/>
        </service>

    </services>

</container>
